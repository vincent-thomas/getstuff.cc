{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "include": [
      "./**/*.ts",
      "./**/*.tsx"
    ]
  },
  "vcs": {
    "useIgnoreFile": true,
    "clientKind": "git",
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "enabled": true,
      "quoteStyle": "double",
      "indentWidth": 2,
      "indentStyle": "space",
      "lineEnding": "lf",
      "quoteProperties": "asNeeded"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      "node_modules",
      ".next",
      ".pnpm-store",
      "cdk.out",
      "public",
      ".contentlayer"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useNamingConvention": "off",
        "noImplicitBoolean": "off",
        "noDefaultExport": "off",
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "noUndeclaredVariables": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}